{
    "id": "com.squaretronics.newhomeyapps",
    "name": {
        "en": "New Homey Apps",
		"nl": "Nieuwe Homey Apps"
    },
    "version": "1.0.0",
    "compatibility": "1.x",
    "author": {
        "name": "Joost Thijssen",
        "email": "contact@squaretronics.com"
    },
    "description": {
        "en": "Flow card that triggers when new Homey apps are available.",
        "nl": "Flow kaart die triggert als er nieuwe Homey apps zijn."
    },
    "images": {
        "large": "./assets/images/large.jpg",
        "small": "./assets/images/small.jpg"
    },
    "category": "tools",
	"flow": {
		"triggers": [
			{
				"id": "new_app",
				"title": {
					"en": "There's a new Homey app",
					"nl": "Er is een nieuwe Homey app"
				},
				"tokens":
				[
					{
						"name": "AppName",
						"type": "string",
						"title": {
							"en": "App name",
							"nl": "App naam"
						},
						"example": "Acme Corp."
					}
				]
			}
		]
	}
}